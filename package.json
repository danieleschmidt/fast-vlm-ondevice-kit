{
  "name": "fast-vlm-ondevice-kit",
  "version": "1.0.0",
  "description": "Production-ready Vision-Language Models for mobile devices",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/fast-vlm-ondevice-kit.git"
  },
  "scripts": {
    "dev": "echo 'Starting development environment...' && npm run setup && npm run lint",
    "setup": "pip install -e '.[dev]' && pre-commit install",
    "setup:all": "pip install -e '.[all]' && pre-commit install",
    
    "test": "pytest",
    "test:watch": "pytest --tb=short -q --disable-warnings -x --looponfail",
    "test:cov": "pytest --cov=src/fast_vlm_ondevice --cov-report=html --cov-report=term",
    "test:benchmark": "pytest benchmarks/ -v",
    "test:integration": "pytest tests/integration/ -v",
    "test:performance": "pytest tests/performance/ -v",
    
    "lint": "npm run lint:python && npm run lint:docs",
    "lint:python": "ruff check src tests && black --check src tests && isort --check-only src tests",
    "lint:docs": "markdownlint README.md docs/ --ignore node_modules",
    "lint:fix": "npm run lint:fix:python && npm run lint:fix:docs",
    "lint:fix:python": "ruff check --fix src tests && black src tests && isort src tests",
    "lint:fix:docs": "markdownlint --fix README.md docs/ --ignore node_modules",
    
    "type-check": "mypy src",
    "type-check:watch": "mypy src --no-error-summary --pretty",
    
    "security": "npm run security:python && npm run security:dependencies",
    "security:python": "bandit -r src/",
    "security:dependencies": "safety check",
    "security:secrets": "detect-secrets scan --all-files",
    
    "format": "black src tests && isort src tests",
    "format:check": "black --check src tests && isort --check-only src tests",
    
    "clean": "npm run clean:python && npm run clean:build",
    "clean:python": "find . -type d -name '__pycache__' -exec rm -rf {} + && find . -name '*.pyc' -delete",
    "clean:build": "rm -rf build/ dist/ *.egg-info/ .coverage htmlcov/ .pytest_cache/ .mypy_cache/ .ruff_cache/",
    "clean:all": "npm run clean && rm -rf node_modules/ .venv/ venv/",
    
    "build": "python -m build",
    "build:wheel": "python -m build --wheel",
    "build:sdist": "python -m build --sdist",
    "build:docs": "cd docs && make html",
    
    "docs": "npm run docs:build && npm run docs:serve",
    "docs:build": "sphinx-build -b html docs/ docs/_build/html",
    "docs:serve": "python -m http.server 8000 --directory docs/_build/html",
    "docs:clean": "rm -rf docs/_build/",
    
    "benchmark": "python benchmarks/run_benchmarks.py",
    "benchmark:profile": "python -m cProfile -o profile.stats benchmarks/run_benchmarks.py",
    "benchmark:memory": "python -m memory_profiler benchmarks/run_benchmarks.py",
    
    "release": "npm run release:check && npm run release:build",
    "release:check": "npm run test && npm run lint && npm run security && npm run type-check",
    "release:build": "npm run clean && npm run build",
    "release:publish": "npm run release && twine upload dist/*",
    
    "pre-commit": "pre-commit run --all-files",
    "pre-commit:install": "pre-commit install",
    "pre-commit:update": "pre-commit autoupdate",
    
    "jupyter": "jupyter lab --ip=0.0.0.0 --port=8888 --no-browser --allow-root",
    "profile": "py-spy top --pid $(pgrep -f python)",
    
    "docker:build": "docker build -t fast-vlm-ondevice .",
    "docker:run": "docker run -it --rm -v $(pwd):/workspace fast-vlm-ondevice",
    "docker:dev": "docker-compose up -d && docker-compose exec dev bash",
    
    "ios:build": "cd ios && swift build",
    "ios:test": "cd ios && swift test",
    "ios:package": "cd ios && swift package generate-xcodeproj",
    
    "ci:setup": "pip install -e '.[dev]' && pre-commit install",
    "ci:test": "pytest --cov=src/fast_vlm_ondevice --cov-report=xml --cov-report=term",
    "ci:security": "bandit -r src/ -f json -o bandit-report.json",
    "ci:build": "python -m build",
    
    "install:dev": "pip install -e '.[dev]'",
    "install:all": "pip install -e '.[all]'",
    "install:production": "pip install -e '.[production]'",
    
    "validate": "npm run lint && npm run type-check && npm run test && npm run security"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.37.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.10.0"
  },
  "keywords": [
    "vision-language-model",
    "mobile-ai",
    "core-ml",
    "quantization",
    "ios",
    "fastvilm",
    "on-device-ai"
  ],
  "author": "Daniel Schmidt <fast-vlm@yourdomain.com>",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/fast-vlm-ondevice-kit",
  "bugs": {
    "url": "https://github.com/yourusername/fast-vlm-ondevice-kit/issues"
  }
}