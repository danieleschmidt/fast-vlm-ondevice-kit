# FastVLM On-Device Kit Environment Configuration
# Copy this file to .env and configure values for your development environment

# ================================
# Model Configuration
# ================================

# Path to FastVLM model checkpoints directory
FASTVILM_CHECKPOINT_DIR=./checkpoints

# Default model variant (tiny, base, large)
FASTVILM_DEFAULT_MODEL=base

# Quantization strategy (int4, int8, fp16, mixed)
FASTVILM_DEFAULT_QUANTIZATION=mixed

# ================================
# Development Environment
# ================================

# Enable development mode (verbose logging, debug symbols)
DEVELOPMENT_MODE=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable performance profiling
ENABLE_PROFILING=false

# ================================
# Core ML Configuration
# ================================

# Compute units preference (ALL, CPU_AND_GPU, CPU_ONLY)
COREML_COMPUTE_UNITS=ALL

# Maximum sequence length for text processing
COREML_MAX_SEQUENCE_LENGTH=77

# Image input resolution (224, 336, 512)
COREML_IMAGE_RESOLUTION=336

# ================================
# Testing Configuration
# ================================

# Test dataset directory
TEST_DATASET_DIR=./tests/fixtures

# Run performance tests (slower but comprehensive)
RUN_PERFORMANCE_TESTS=false

# Device testing (requires physical iOS device)
ENABLE_DEVICE_TESTING=false

# iOS simulator identifier for testing
IOS_SIMULATOR_ID=iPhone-15-Pro

# ================================
# Benchmarking
# ================================

# Number of warmup iterations for benchmarks
BENCHMARK_WARMUP_ITERATIONS=10

# Number of measurement iterations
BENCHMARK_ITERATIONS=100

# Enable memory profiling during benchmarks
BENCHMARK_MEMORY_PROFILING=true

# ================================
# Build Configuration
# ================================

# Enable compiler optimizations
ENABLE_OPTIMIZATIONS=true

# Build configuration (debug, release)
BUILD_CONFIGURATION=debug

# Swift optimization level (-Onone, -O, -Osize)
SWIFT_OPTIMIZATION_LEVEL=-O

# ================================
# Security Configuration
# ================================

# Enable security scanning in CI
ENABLE_SECURITY_SCANNING=true

# Fail build on high-severity vulnerabilities
FAIL_ON_HIGH_SEVERITY=true

# Enable dependency vulnerability checking
CHECK_DEPENDENCIES=true

# ================================
# Documentation
# ================================

# Generate API documentation
GENERATE_API_DOCS=true

# Documentation output directory
DOCS_OUTPUT_DIR=./docs/api

# Include private APIs in documentation
INCLUDE_PRIVATE_APIS=false

# ================================
# Monitoring & Observability
# ================================

# Enable metrics collection
ENABLE_METRICS=false

# Metrics endpoint (for development monitoring)
METRICS_ENDPOINT=http://localhost:9090

# Enable distributed tracing
ENABLE_TRACING=false

# ================================
# External Services (Optional)
# ================================

# HuggingFace Hub token (for downloading models)
# HUGGINGFACE_TOKEN=your_token_here

# GitHub token (for release automation)
# GITHUB_TOKEN=your_token_here

# Apple Developer Team ID (for iOS builds)
# APPLE_TEAM_ID=your_team_id

# ================================
# CI/CD Configuration
# ================================

# Slack webhook for notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/...

# Email for notifications
# NOTIFICATION_EMAIL=developer@yourcompany.com

# ================================
# Advanced Configuration
# ================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Custom model architectures support
ENABLE_CUSTOM_MODELS=false

# Memory pool size for model inference (MB)
MEMORY_POOL_SIZE=1024

# ================================
# Platform-Specific Settings
# ================================

# macOS specific settings
MACOS_DEPLOYMENT_TARGET=14.0

# iOS specific settings  
IOS_DEPLOYMENT_TARGET=17.0

# Xcode version requirement
XCODE_VERSION=15.0