# FastVLM On-Device Kit Environment Configuration
# Copy this file to .env and configure with your specific values

# ==============================================================================
# MODEL CONFIGURATION
# ==============================================================================

# Model checkpoint directory
FASTVM_CHECKPOINT_DIR=./checkpoints

# Default model variant (tiny, base, large, multilingual)
FASTVM_DEFAULT_MODEL=base

# Model cache directory for converted Core ML models
FASTVM_MODEL_CACHE_DIR=./models/cache

# ==============================================================================
# CORE ML CONFIGURATION  
# ==============================================================================

# Compute units preference (ALL, CPU_ONLY, CPU_AND_GPU, CPU_AND_NE)
COREML_COMPUTE_UNITS=ALL

# Quantization strategy (int4, int8, fp16, mixed)
COREML_QUANTIZATION=mixed

# Maximum sequence length for text input
COREML_MAX_SEQUENCE_LENGTH=77

# ==============================================================================
# PERFORMANCE SETTINGS
# ==============================================================================

# Benchmark output directory
BENCHMARK_OUTPUT_DIR=./benchmarks/results

# Number of warmup iterations for performance testing  
BENCHMARK_WARMUP_ITERATIONS=10

# Number of measurement iterations for benchmarking
BENCHMARK_MEASUREMENT_ITERATIONS=100

# Device target for testing (iPhone15Pro, iPhone14, iPadProM2, etc.)
BENCHMARK_TARGET_DEVICE=iPhone15Pro

# ==============================================================================
# DEVELOPMENT CONFIGURATION
# ==============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable development mode features
FASTVM_DEV_MODE=true

# Enable performance profiling
FASTVM_ENABLE_PROFILING=false

# Enable memory usage tracking
FASTVM_TRACK_MEMORY=false

# ==============================================================================
# TESTING CONFIGURATION
# ==============================================================================

# Test data directory
TEST_DATA_DIR=./tests/data

# VQA dataset path for accuracy testing
VQA_DATASET_PATH=./datasets/vqa_v2

# Calibration dataset size for quantization
CALIBRATION_DATASET_SIZE=1000

# ==============================================================================
# CI/CD CONFIGURATION
# ==============================================================================

# GitHub token for release automation (CI only)
# GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# PyPI token for package publishing (CI only)  
# PYPI_TOKEN=pypi-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Docker registry configuration
# DOCKER_REGISTRY=ghcr.io
# DOCKER_USERNAME=yourusername

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# Enable security scanning
SECURITY_SCAN_ENABLED=true

# Bandit security level (low, medium, high)
BANDIT_SECURITY_LEVEL=medium

# Safety check for dependencies
SAFETY_CHECK_ENABLED=true

# ==============================================================================
# EXPERIMENTAL FEATURES
# ==============================================================================

# Enable experimental quantization techniques
EXPERIMENTAL_QUANTIZATION=false

# Enable multi-model ensemble support
EXPERIMENTAL_ENSEMBLE=false

# Enable streaming inference
EXPERIMENTAL_STREAMING=false

# Enable federated learning features
EXPERIMENTAL_FEDERATED=false

# ==============================================================================
# APPLE DEVELOPMENT
# ==============================================================================

# iOS Simulator device ID for testing
IOS_SIMULATOR_DEVICE_ID=

# Xcode project path for iOS development
XCODE_PROJECT_PATH=./ios/FastVLMDemo.xcodeproj

# Code signing identity for iOS builds
IOS_CODE_SIGN_IDENTITY=

# iOS development team ID
IOS_TEAM_ID=

# ==============================================================================
# MONITORING & OBSERVABILITY
# ==============================================================================

# Enable performance monitoring
MONITORING_ENABLED=false

# OpenTelemetry endpoint for metrics export
OTEL_EXPORTER_OTLP_ENDPOINT=

# Prometheus metrics endpoint
PROMETHEUS_ENDPOINT=http://localhost:9090

# Grafana dashboard URL
GRAFANA_DASHBOARD_URL=

# ==============================================================================
# NOTES
# ==============================================================================

# This file contains example configuration values.
# Copy to .env and modify according to your development setup.
# Never commit .env files to version control.
# 
# For production deployment, use environment-specific configuration
# and secure secret management systems.